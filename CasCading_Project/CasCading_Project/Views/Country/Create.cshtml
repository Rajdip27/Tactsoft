@model CasCading_Project.Models.Country

@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create" asp-controller="Country" method="post">
    <div class="container">
        <div class="row">
            <div class="col-6">
                @Html.LabelFor(m=>m.CountryName,new{@class="form-label"})
                @Html.TextBoxFor(m=>m.CountryName, new {@class="form-control"})
            </div>
            <div class="col-12 mt-3">
                <button type="submit" class="btn btn-primary">Save Country</button>
            </div>
        </div>
        
    </div>
</form>

