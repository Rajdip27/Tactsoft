@model Master_Details_JQure.Models.Country

@{
    Layout = null;
}
<br />

<form asp-action="AddorEdit" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);">
      <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <input asp-for="CountryName" class="form-control" placeholder="Country Name" />
                <span asp-validation-for="CountryName" class="text-danger"></span>
            </div>
        </div>
      </div>
      <br />
      <div class="row">
        <div class="d-grid gap-2">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
      </div>
   </form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
