@model Master_Details_JQure.Models.State
@{
    Layout = null;
}


<form asp-action="AddorEdit" asp-route-id="@Model.Id" onsubmit="return jQueryAjaxPost(this);">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <input asp-for="StateName" class="form-control" placeholder="State Name" />
                <span asp-validation-for="StateName" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-md-12">
            <select asp-for="CountryId" class="form-control" asp-items="@(ViewBag.CountryId)">
                <option value="">Select Country</option>
            </select>
            <span asp-validation-for="CountryId" class="text-danger"></span>
        </div>
    </div>

    <br />
    <div class="row">
        <div class="d-grid gap-2">
            <input type="submit" value="Save" class="btn btn-primary" />
            @*<button class="btn btn-primary" type="button">Button</button>*@
        </div>
    </div>
</form>
<script src="~/js/state/state.js"></script>