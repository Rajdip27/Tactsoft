@model Students_Mangmaent_With_Repostory_patten.Models.Faculty

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center text-success">Edit Faculty</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
