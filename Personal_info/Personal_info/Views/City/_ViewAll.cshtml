@model IEnumerable<Personal_info.Models.City>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.State)
            </th>

            <th>Action</th>
            <th>
                <a onclick="citypoup('@Url.Action("AddorEdit","City",null,Context.Request.Scheme)','New City')" class="btn btn-sm btn-primary">Create City</a>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CityName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.State.StateName)
                </td>
                <td>
                    <a onclick="citypoup('@Url.Action("AddorEdit","City", new{id=item.Id},Context.Request.Scheme)','Edit Country')" class="btn btn-sm btn-primary">Edit</a> |
                    <form asp-action="Delete" asp-route-id="@item.Id" onsubmit="return cityDelete(this)" class="d-inline">
                        <input type="hidden" asp-for="@item.Id" />
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </form>
                </td>
                
            </tr>
        }
    </tbody>
</table>
<script src="~/admin/city/city.js"></script>
